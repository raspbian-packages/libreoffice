Package: libreoffice-evolution
Architecture: %OOO_BASE_ARCHS%
Section: gnome
Depends: libreoffice-base,
         libreoffice-common (>= 1:3.4.0~),
         libreoffice-core (= ${binary:Version}),
         ${libebook-dep},
         ${misc:Depends},
         ${shlibs:Depends}
Recommends: evolution
Breaks: ure (<< 1.5.1+OOo3.1.1-15)
