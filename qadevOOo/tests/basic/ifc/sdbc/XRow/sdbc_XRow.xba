Function findColumn(cType As String) As Integer
    Dim i As Integer
    
    for i = lbound(rowTypes()) to ubound(rowTypes())
        if rowTypes(i) = cType then
            findColumn() = rowTypesCol(i)
            exit function
        end if    
    next i
    
    findColumn() = -1 
End function
